{
  "title": "Flurl",
  "version": "2.1.1-beta",

  "buildOptions": {
    "compile": {
      "include": "../Flurl.Shared/**/*.cs"
    },
    "warningsAsErrors": true,
    "xmlDoc": true
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "frameworks": {
    ".NETPortable4.0-net40+sl50+win+wpa81+wp80": {
      "frameworkAssemblies": {
        "mscorlib": "2.0.5.0",
        "System": "2.0.5.0",
        "System.Core": "2.0.5.0"
      }
    },
    "netstandard1.4": {
      "dependencies": {
        "System.Globalization.Calendars": "4.0.1",
        "System.Linq": "4.1.0",
        "System.Reflection.TypeExtensions": "4.1.0"
      }
    }
  }
}